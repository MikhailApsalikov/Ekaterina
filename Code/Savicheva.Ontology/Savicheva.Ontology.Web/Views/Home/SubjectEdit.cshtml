@{
	ViewBag.Title = "Онтология \"Учебные планы\"";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
	<link href="~/Content/subject-edit.css" rel="stylesheet"/>
}

@section scripts{
	<script src="~/AngularApp/Controllers/subjectEditController.js"></script>
}
<div ng-controller="subjectEditController">
	<div ng-if="isPageVisible()">
		<h1 ng-if="getId()">Редактирование дисциплины №{{getId()}}</h1>
		<h1 ng-if="!getId()">Создание новой дисциплины</h1>
		<div class="edit-area">
			<div class="property form-group">
				<div class="property-name">Название</div>
				<div class="property-value">
					<input type="text" class="form-control" ng-model="subject.Title"/>
				</div>
			</div>
			<div class="property form-group">
				<div class="property-name">Форма контроля</div>
				<div class="property-value">
					<select class="selectpicker form-control" ng-model="subject.FormsOfControl" multiple>
						<option ng-repeat="fc in formsOfControl" value="{{fc.id}}">{{fc.name}}</option>
					</select>
				</div>
			</div>
			<div class="property form-group">
				<div class="property-name">Часы для проведения практических занятий</div>
				<div class="property-value">
					<input type="number" class="form-control" ng-model="subject.HasHourForPract" />
				</div>
			</div>
			<div class="property form-group">
				<div class="property-name">Часы для проведения лекций</div>
				<div class="property-value">
					<input type="number" class="form-control" ng-model="subject.HasHourForLecture" />
				</div>
			</div>
			<div class="property form-group">
				<div class="property-name">Часы для проведения лабораторных работ</div>
				<div class="property-value">
					<input type="number" class="form-control" ng-model="subject.HasHourForLab" />
				</div>
			</div>
			<div class="property form-group">
				<div class="property-name">Часы для проведения коллоквиумов</div>
				<div class="property-value">
					<input type="number" class="form-control" ng-model="subject.HasHourForKoll" />
				</div>
			</div>
			<div class="property form-group">
				<div class="property-name">Часы для индивидуальных занятий</div>
				<div class="property-value">
					<input type="number" class="form-control" ng-model="subject.HasHourForInd" />
				</div>
			</div>
			<button class="btn btn-primary btn-save" ng-click="save()">Сохранить</button>
		</div>
		

	</div>
	<div ng-if="!isPageVisible()">
		<h1 class="authorization-error">Страница недоступна для роли "{{userRole}}"</h1>
	</div>
</div>